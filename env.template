# Oracle Samuel - Environment Configuration Template
# Copy this file to .env and fill in your values

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_USER=oracle
DB_PASSWORD=change_me_in_production
DB_NAME=oracle_db
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://oracle:change_me_in_production@localhost:5432/oracle_db

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ========================================
# API SECURITY
# ========================================
API_SECRET_KEY=your-super-secret-key-min-32-chars
ALLOWED_ORIGINS=http://localhost:8501,http://localhost:3000

# ========================================
# OBJECT STORAGE (S3/GCS)
# ========================================
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=oracle-samuel-models

# GCP Cloud Storage
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCS_BUCKET=oracle-samuel-models
GCS_PROJECT_ID=your-gcp-project-id

# ========================================
# GITHUB API CONFIGURATION
# ========================================
GITHUB_API_KEY=ghp_your_github_token_here
GITHUB_USERNAME=your_github_username
GITHUB_REPO=oracle-samuel

# ========================================
# AI SERVICES
# ========================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=

# ========================================
# MONITORING & LOGGING
# ========================================
GRAFANA_PASSWORD=admin
SENTRY_DSN=
LOG_LEVEL=INFO

# ========================================
# APPLICATION SETTINGS
# ========================================
ENVIRONMENT=development
DEBUG=true
PORT=8000
WORKERS=1

# ========================================
# EMAIL (for alerts)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=admin@example.com

# ========================================
# CELERY CONFIGURATION
# ========================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ========================================
# MODEL SETTINGS
# ========================================
MODEL_VERSION=1.0.0
MAX_UPLOAD_SIZE_MB=100
AUTO_RETRAIN_THRESHOLD=0.15
MIN_SAMPLES_FOR_TRAINING=100

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_VOICE=true
ENABLE_VISION=true
ENABLE_GEO=true
ENABLE_AUTO_RETRAIN=true

